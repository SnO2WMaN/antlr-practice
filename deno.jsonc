{
  "importMap": "./import_map.json",
  "tasks": {
    "start": "deno run -A --unstable ./mod.ts",
    "dev": "deno run -A --watch --unstable ./mod.ts",
    "debug": "deno run --inspect-brk -A --unstable ./mod.ts",
    "test": "deno test",
    "lint": "deno lint"
  },
  "lint": {
    "files": {
      "exclude": [
        "./grammars/**/*.js"
      ]
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 120,
      "indentWidth": 2,
      "singleQuote": false,
      "useTabs": false
    },
    "files": {
      "exclude": [
        "./lock.json",
        "./grammars/**/*.js"
      ]
    }
  }
}
